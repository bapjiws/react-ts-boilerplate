    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jsx-a11y": "^5.1.1",
    "eslint-plugin-prettier": "2.3.1",
    "eslint-plugin-react": "^7.4.0",
    "eslint-plugin-typescript": "^0.7.0",
    "husky": "^0.14.3",
    "lint-staged": "^4.2.3",
    "nodemon": "^1.11.0",
    "prettier": "^1.7.2",
    "typescript-eslint-parser": "^8.0.0",
    "webpack-dev-middleware": "^1.11.0",
    "webpack-hot-middleware": "^2.18.2",
    "webpack-node-externals": "^1.6.0"
  },
  "dependencies": {
    "@types/react": "^15.0.38",
    "@types/react-dom": "^15.5.1",
    "@types/react-hot-loader": "^3.0.3",
    "@types/webpack-env": "^1.13.0",
    "awesome-typescript-loader": "^3.2.3",
    "babel-core": "^6.25.0",
    "babel-loader": "^7.1.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "compression": "^1.7.0",
    "css-loader": "^0.28.4",
    "dotenv": "^4.0.0",
    "express": "^4.15.3",
    "extract-text-webpack-plugin": "^3.0.0",
    "file-loader": "^0.11.2",
    "html-webpack-plugin": "^2.29.0",
    "node-sass": "^4.5.3",
    "postcss-loader": "^2.0.6",
    "react": "^15.6.1",
    "react-dom": "^15.6.1",
    "react-hot-loader": "next",
    "rimraf": "^2.6.1",
    "sass-loader": "^6.0.6",
    "source-map-loader": "^0.2.1",
    "style-loader": "^0.18.2",
    "typescript": "^2.5.3",
    "webpack": "^3.2.0"
  },
  "scripts": {
    "build": "yarn run clean && NODE_ENV=production webpack -p",
    "clean": "rimraf build",
    "dev": "nodemon server.js",
    "eslint-check": "eslint --print-config .eslintrc.js | eslint-config-prettier-check",
    "lint": "eslint server.js webpack.config.js . --ext .ts,.tsx --cache",
    "lint:fix": "eslint server.js webpack.config.js . --ext .ts,.tsx --cache --fix",
    "precommit": "lint-staged",
    "postcommit": "git reset *",
    "prod": "NODE_ENV=production node server.js",
    "release-the-kraken": "yarn run build && yarn run prod"
  },
  "lint-staged": {
    "*.+(js|ts|tsx)": [
      "eslint --fix",
      "git add"
    ]
  }
}
